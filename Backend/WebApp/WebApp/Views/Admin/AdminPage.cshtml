
@{
    ViewBag.Title = "AdminPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="admin-page">
    <div ng-app="app" ng-controller="test">
        <div>
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Daily Horoscope</a></li>
                <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
                <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
                <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home">
                    <input type="file" file-change="loadDailyHoroscope($event,files)" ng-model="MyFiles" multiple /><br />
                    <hr/>
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr ng-repeat="x in DailyHoroscopeCards">
                                <td>Comments</td>
                                <td>Date loaded</td>
                                <td></td>
                                <td></td>
                            </tr>
                        </thead>
                        <tr ng-repeat="x in DailyHoroscopeCards">
                            <td>{{ x.Comment }}</td>
                            <td>{{ x.LoadedDate }}</td>
                            <td><button type="button" class="btn btn-info" ng-click="showDataCard(x.Id)">Show</button></td>
                            <td><button type="button" class="btn btn-danger" ng-click="removeDataCard(x.Id)">Remove</button></td>
                        </tr>
                    </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="profile">2.</div>
                <div role="tabpanel" class="tab-pane" id="messages">3.</div>
                <div role="tabpanel" class="tab-pane" id="settings">4.</div>
            </div>

        </div>


        @*NewsLetters: <input type="file" file-change="loadNewsLetters($event,files)" ng-model="MyFiles" /><br />
        Chart data: <input type="file" file-change="loadChartData($event,files)" ng-model="MyFiles" /><br />
        Daily horoscope:*@ 
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/angular.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-base64.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Site/admin-page.js")"></script>
    <script src="@Url.Content("~/Scripts/Site/CSVParser.js")"></script>
    <script>

    </script>
}
