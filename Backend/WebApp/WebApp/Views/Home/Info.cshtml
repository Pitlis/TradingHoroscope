@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Domain.DailyHoroscopeRecord

<div class="info">
    <div class="row">
        <div class="col-sm-4 col-md-4">
            <div class="zodiac-logo">
                <img class="zodiac-logo" src="~/Content/Images/zodiac/aquarius.png" />
                <h1>Aries</h1>
            </div>
        </div>
        <div class="col-sm-8 col-md-8">
            <div class="panel panel-default panel-first-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Trading Horoscope for Aries | @Model.Date.ToString("d MMMM, yyyy")</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-condensed">
                        <tr class="success">
                            <td>Ticker</td>
                            <td>@Model.Ticker</td>
                        </tr>
                        <tr class="warning">
                            <td>Statistical Analysis</td>
                            <td>@Model.Analysis</td>
                        </tr>
                        <tr class="danger">
                            <td>Enter</td>
                            <td>@Model.Enter</td>
                        </tr>
                        <tr class="success">
                            <td>Exit</td>
                            <td>@Model.Exit</td>
                        </tr>
                        <tr class="warning">
                            <td>Holding Period</td>
                            <td>@Model.HoldingPeriod</td>
                        </tr>
                        <tr class="danger">
                            <td>Average Historical Return</td>
                            <td>@Model.AvgHistReturn%</td>
                        </tr>
                        <tr class="success">
                            <td>Success Rate</td>
                            <td>@Model.SuccessRate%</td>
                        </tr>
                        <tr class="warning">
                            <td>Testing Period</td>
                            <td>@Model.TestingPeriod</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <button id="button-details-info" type="button" class="btn btn-default" data-toggle="collapse" data-target="#details-info">
            <i class="fa fa-angle-down fa-2x pull-left" aria-hidden="true"></i>
            Show details
            <i class="fa fa-angle-down fa-2x pull-right" aria-hidden="true"></i>
        </button>

        <div id="details-info" class="collapse">
            <h2>Aries Fund vs. S&P 500</h2>
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div id="dashboard_div" style="height: 393px; width: 100%;">
                        <div id="chart_div" style="height: 293px; width: 100%;"></div>
                        <div id="filter_div" style="height: 100px"></div>
                    </div>
                </div>
            </div>
            <div class="row ">
                <div class="col-sm-5 col-md-5 table-comparative-analysis">
                    <div class="panel panel-default panel-first-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">Comparative Analysis</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-condensed">
                                <thead>
                                    <tr class="default">
                                        <td></td>
                                        <td>Aries Fund</td>
                                        <td>S&P 500 Index</td>
                                    </tr>
                                </thead>
                                <tbody id="fund-overview-content">
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-sm-7 col-md-7 table-historical-signals">
                    <div class="panel panel-default panel-first-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">Historical Signals</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-condensed table-hover table-striped">
                                <thead >
                                    <tr class="default">
                                        <td>Date</td>
                                        <td>Ticker</td>
                                        <td>Buy/Short</td>
                                        <td>Enter</td>
                                        <td>Exit</td>
                                        <td>Holding Period</td>
                                        <td>Return</td>
                                    </tr>
                                </thead>
                                <tbody id="historical-signals-content">

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

</div>
@section Scripts
{

    <script src="@Url.Content("https://www.gstatic.com/charts/loader.js")"></script>
    <script type="text/javascript">
        
    </script>
    <script src="@Url.Content("~/Scripts/Site/testChartData.js")"></script>
    <script src="@Url.Content("~/Scripts/Site/zodiac-info.js")"></script>



}
